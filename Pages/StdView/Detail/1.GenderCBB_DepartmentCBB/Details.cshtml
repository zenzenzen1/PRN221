@page "/stdView/Details1"
@model LoadDB_Razor.Pages.StdView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Gender)
        </dt>
        <dd class="col-sm-10">
            <select asp-for="Student.Gender" asp-items='@new SelectList(new List<dynamic>(){ new {gender = "Male", value = true}, new {gender = "Female", value = false}}, "value", "gender")'></select>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Dob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Dob)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Gpa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Gpa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Depart)
        </dt>
        <dd class="col-sm-10">
            <select asp-for="Student.DepartId" asp-items='@new SelectList(PRN221_DBContext.Instance.Departments, "Id", "Name")'></select>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="../../Edit" asp-route-id="@Model.Student?.Id">Edit</a> |
    <a asp-page="../../Index">Back to List</a>
</div>

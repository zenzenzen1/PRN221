@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoadDB_Razor.Pages.MyView.Bai1.IndexModel
@using LoadDB_Razor.Models;
@{
    Layout = "Bai1/_Bai1Layout";
}
<a asp-page="Index1"></a>
<h2>Welcome PRN211</h2>
<a asp-page="../../CreateStudent/1.GenderCB_DepartmentCB/CreateStudent" >Create Student</a>
<table>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Gender</td>
        <td>Department</td>
        <td>DOB</td>
        <td>GPA</td>
    </tr>
    @foreach (Student s in Model.Students)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>
                <input type="checkbox" @(s.Gender ? "checked" : "")/> 
                Male/Female
            </td> 
            <td>@s.Depart?.Name</td>
            <td>@s.Dob</td>
            <td>@s.Gpa</td>
        </tr>
    }
</table>
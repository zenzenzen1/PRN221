@page "/CreateStudent/6"
@model LoadDb.Pages.CreateStudent5.CreateStudentModel
@using LoadDB_Razor.Models;
@{
}

<form method="post">
    <table>
        <tr>
            <td>
                <label asp-for="Student.Id "></label>
            </td>
            <td>
                <input asp-for="Student.Id" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Name"></label>

            </td>
            <td>
                <input asp-for="Student.Name" />
            </td>
        </tr>
        <tr>
            <td>
                <label for="gender">Gender</label>
            </td>
            <td>
                <select name="gender" asp-items="@(new List<SelectListItem>(){
                    new SelectListItem("Male", "male", Model.Student != null && Model.Student.Gender == true),
                    new SelectListItem("Female", "Female", Model.Student != null && Model.Student.Gender == false){
                    },
                })">
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label>Department</label>
            </td>
            <td>
                @foreach (var department in PRN221_DBContext.Instance.Departments)
                {
                    <input 
                        type="radio" id="@department.Id" name="departmentId" value="@department.Id" 
                        @(Model.Student != null && Model.Student.DepartId == department.Id ? "checked" : "") />
                    <label for="@department.Id">@department.Name</label> <br />
                }
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Dob"></label>
            </td>
            <td>
                <input asp-for="Student.Dob" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Gpa"></label>
            </td>
            <td>
                <input asp-for="Student.Gpa" />
            </td>
    </table>
    <button type="submit">Create</button>
</form>

@page "/CreateStudent/7"
@model LoadDb.Pages.CreateStudent7.CreateStudentModel
@using LoadDB_Razor.Models;
@{
}

<form method="post">
    <table>
        <tr>
            <td>
                <label asp-for="Student.Id "></label>
            </td>
            <td>
                <input name="id" type="number"/>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Name"></label>
            </td>
            <td>
                <input name="name" />
            </td>
        </tr>
        <tr>
            <td>
                <label for="gender">Gender</label>
            </td>
            <td>
                <input type="radio" id="genderMale" name="gender" value="male" @(Model.Student != null && Model.Student.Gender ? "checked" : "") /> 
                <label for="genderMale">Male</label>
                <input type="radio" id="genderFemale" name="gender" value="female" @(Model.Student != null && Model.Student.Gender ? "" : "checked")/> 
                <label for="genderFemale">Female</label>
            </td>
        </tr>
        <tr>
            <td>
                <label>Department</label>
            </td>
            <td>
                <select name="departmentId">
                    @foreach (Department d in PRN221_DBContext.Instance.Departments)
                    {
                        if(Model.Student != null && Model.Student.DepartId.Equals(d.Id)){
                            <option value="@d.Id">@d.Name</option>
                        }
                        else{
                            <option value="@d.Id">@d.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Dob"></label>
            </td>
            <td>
                <input type="date" name="dob" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Student.Gpa"></label>
            </td>
            <td>
                <input name="gpa" type="number" />
            </td>
    </table>
    <button type="submit">Create</button>
</form>
